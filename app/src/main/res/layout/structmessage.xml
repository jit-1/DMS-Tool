<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/main">

    <TextView
        android:id="@+id/ItemName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Select the Type of item"/>

    <Spinner
        android:id="@+id/item"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ItemName" />

    <TextView
        android:id="@+id/SubItems"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item"
        android:text="Select the item"/>
    <Spinner
        android:id="@+id/item2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/SubItems"/>
    <TextView
        android:id="@+id/NumofPersons"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item2"
        android:text="Enter the Required Value "/>

    <Spinner
        android:id="@+id/item3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/NumofPersons"/>

    <EditText
        android:id="@+id/item4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="For Custom Entry..."
        android:layout_below="@+id/item3"/>


    <Button
        android:id="@+id/add"
        android:text="Add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item4"/>

    <TextView
        android:id="@+id/op"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add"/>

    <Button
        android:id="@+id/save"
        android:text="Save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/op"
        android:layout_centerHorizontal="true" />



</RelativeLayout>
